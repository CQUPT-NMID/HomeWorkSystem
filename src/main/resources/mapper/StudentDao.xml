<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.cqupt.nmid.homeworksystem.dao.StudentDao">

    <resultMap type="cn.edu.cqupt.nmid.homeworksystem.po.Student" id="StudentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="sname" column="sname" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="classnum" column="classnum" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="snumber" column="snumber" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="academy" column="academy" jdbcType="VARCHAR"/>
        <result property="telephote" column="telephote" jdbcType="VARCHAR"/>
        <result property="avatarurl" column="avatarurl" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StudentMap">
        select
          id, sname, password, classnum, email, snumber, age, academy, telephote, avatarurl
        from homework.student
        where id = #{id}
    </select>

    <select id="queryByEmail" resultMap="StudentMap">
        select
          id, sname, password, classnum, email, snumber, age, academy, telephote, avatarurl
        from homework.student
        where email = #{email}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StudentMap">
        select
          id, sname, password, classnum, email, snumber, age, academy, telephote, avatarurl
        from homework.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StudentMap">
        select
          id, sname, password, classnum, email, snumber, age, academy, telephote, avatarurl
        from homework.student
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="sname != null and sname != ''">
                and sname = #{sname}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="classnum != null and classnum != ''">
                and classnum = #{classnum}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="snumber != null and snumber != ''">
                and snumber = #{snumber}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="academy != null and academy != ''">
                and academy = #{academy}
            </if>
            <if test="telephote != null and telephote != ''">
                and telephote = #{telephote}
            </if>
            <if test="avatarurl != null and avatarurl != ''">
                and avatarurl = #{avatarurl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into homework.student(sname, password, classnum, snumber, age, academy, telephote, avatarurl)
        values (#{sname}, #{password}, #{classnum}, #{snumber}, #{age}, #{academy}, #{telephote}, #{avatarurl})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update homework.student
        <set>
            <if test="sname != null and sname != ''">
                sname = #{sname},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="classnum != null and classnum != ''">
                classnum = #{classnum},
            </if>
            <if test="snumber != null and snumber != ''">
                snumber = #{snumber},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="academy != null and academy != ''">
                academy = #{academy},
            </if>
            <if test="telephote != null and telephote != ''">
                telephote = #{telephote},
            </if>
            <if test="avatarurl != null and avatarurl != ''">
                avatarurl = #{avatarurl},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from homework.student where id = #{id}
    </delete>

</mapper>